<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<project name="Example Project" startPanel="mainPanel">
 <categories>
  <category id="light" label="Lighting" />
  <category id="heating" label="Heating" />
 </categories>
 <groups>
  <group id="light.all" addr="1/0/100" dataType="bool" category="light" />
  <group id="light.1" addr="1/0/101" dataType="bool" category="light" />
  <group id="light.2" addr="1/0/102" dataType="unsigned byte" category="light" />
 </groups>
<!--  <functions>
  <function name="lightAll">
  </function>
 </functions>
 -->
 <programs>
  <program id="lightLogic1">
   <connectors>
    <input name="in1" group="light-1" />
    <input name="in2" group="light-2" />
    <output name="out" group="light-4" />
   </connectors>
   <code>
    out = in1 | in2
   </code>
  </program>
 </programs>
 <rooms>
  <room id="living" label="Living Room">
   <item label="Central light" group="light.1" />
   <item label="Background light" group="light.2" />
  </room>
 </rooms>
 <panels>
  <panel id="mainPanel">
   <horizontalLayout>
    <verticalLayout width="200">
     <foreach var="room" items="rooms">
      <button text="${room.label}" />
     </foreach>
     <foreach var="category" items="categories">
      <button text="${category.label}" />
     </foreach>
    </verticalLayout>
   </horizontalLayout>
  </panel>
 </panels>
</project>
