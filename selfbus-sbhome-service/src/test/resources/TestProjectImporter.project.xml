<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<project name="Example Project" startPanel="mainPanel">
 <categories>
  <category id="light" label="Lighting" />
  <category id="heating" label="Heating" />
 </categories>
 <groups>
  <group name="light.all" addr="1/0/100" type="bool" category="light" />
  <group name="light.1" addr="1/0/101" type="bool" category="light" />
  <group name="light.2" addr="1/0/102" type="unsigned byte" category="light" />
 </groups>
 <moduleTypes>
  <moduleType name="logic.and">
   <input name="in1" type="bool" />
   <input name="in2" type="bool" />
   <output name="out" type="bool" />
   <variable name="tmp" type="bool" />
   <variable name="tmp2" type="bool" />
   <code>
    <![CDATA[ tmp = in1 && in2; out = tmp; ]]>
   </code>
  </moduleType>
  <moduleType name="lightLogic1">
   <input name="in1" type="bool" />
   <input name="in2" type="bool" />
   <output name="out" type="bool" />
   <code>
    <![CDATA[ out = in1 || in2 ]]>
   </code>
  </moduleType>
 </moduleTypes>
 <programs>
  <program id="logic.or">
   <connectors>
    <input name="in1" variable="light-1" />
    <input name="in2" variable="light-2" />
    <output name="out" variable="light-4" />
   </connectors>
   <code>
    <![CDATA[ out = in1 | in2 ]]>
   </code>
  </program>
 </programs>
 <rooms>
  <room id="living" label="Living Room">
   <item label="Central light" variable="light.1" />
   <item label="Background light" variable="light.2" />
  </room>
 </rooms>
 <panels>
  <panel id="mainPanel">
   <horizontalLayout>
    <verticalLayout width="200">
     <foreach var="room" items="rooms">
      <button text="${room.label}" />
     </foreach>
     <foreach var="category" items="categories">
      <button text="${category.label}" />
     </foreach>
    </verticalLayout>
   </horizontalLayout>
  </panel>
 </panels>
</project>
