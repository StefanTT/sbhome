<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<project name="Example Project" startPanel="mainPanel">
 <categories>
  <category id="light" label="Lighting" />
  <category id="heating" label="Heating" />
 </categories>
 <groups>
  <group id="light-1" addr="1/0/100" dataType="boolean" category="light" />
  <group id="light-2" addr="1/0/101" dataType="byte_1" category="light" />
 </groups>
 <rooms>
  <room id="living" label="Living Room">
   <item label="Central light" group="light-1" />
   <item label="Background light" group="light-2" />
  </room>
 </rooms>
 <panels>
  <panel id="mainPanel">
   <horizontalLayout>
    <verticalLayout width="200">
     <foreach var="roomId" items="rooms">
      <button text="${room.label}" />
     </foreach>
     <foreach var="categoryId" items="categories">
      <button text="${category.label}" />
     </foreach>
    </verticalLayout>
   </horizontalLayout>
  </panel>
 </panels>
</project>
