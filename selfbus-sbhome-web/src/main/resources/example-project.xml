<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<project name="Example Project" startPanel="leftMainPanel">
 <categories>
  <category id="lighting" label="Beleuchtung" />
  <category id="heating" label="Heizung" />
 </categories>
 <variables>
  <variable name="light.c1" type="bool" category="lighting" />
 </variables>
 <groups>
  <group name="light.master" type="bool" addr="1/0/99" category="lighting" />
  <group name="light.1" type="bool" addr="1/0/0" category="lighting" />
  <group name="light.2" type="unsigned byte" addr="1/0/1" category="lighting" />
  <group name="light.3" type="bool" addr="1/0/2" category="lighting" />
  <group name="light.11" type="bool" addr="1/0/11" category="lighting" />
 </groups>
 <moduleTypes>
  <moduleType name="logic.and">
   <input name="in1" type="bool" />
   <input name="in2" type="bool" />
   <output name="out" type="bool" />
   <code>
    <![CDATA[ out = in1 && in2 ]]>
   </code>
  </moduleType>
  <moduleType name="logic.or">
   <input name="in1" type="bool" />
   <input name="in2" type="bool" />
   <output name="out" type="bool" />
   <code>
    <![CDATA[ out = in1 || in2 ]]>
   </code>
  </moduleType>
 </moduleTypes>
 <rooms>
  <room id="living" label="Wohnzimmer">
   <item label="Raumlicht" variable="light.1" />
   <item label="Hintergrund Beleuchtung" variable="light.2" />
  </room>
  <room id="dining" label="Esszimmer">
   <item label="Raumlicht" variable="light.1" />
  </room>
  <room id="entrance" label="Eingang">
   <item label="Raumlicht" variable="light.3" />
  </room>
  <room id="garage" label="Garage">
   <item label="Raumlicht" variable="light.11" />
  </room>
 </rooms>
 <panels>
  <panel id="leftMainPanel" title="Übersicht">
   <verticalLayout width="300">
    <label text="Räume" />
    <foreach var="room" items="rooms">
     <button text="${room.label}" width="300">
      <onClick>
       <showPanel panel="roomPanel" />
      </onClick>
     </button>
    </foreach>
    <label text="" />
    <label text="Kategorien" />
    <foreach var="category" items="categories">
     <button text="${category.label}" width="300">
      <onClick>
       <showPanel panel="categoryPanel" />
      </onClick>
     </button>
    </foreach>
   </verticalLayout>
  </panel>
  <panel id="rightMainPanel" title="Test Konsole">
   <verticalLayout>
    <foreach var="group" items="groups">
     <horizontalLayout>
      <label text="Setze Wert von ${group.id} auf" width="200" />
      <button text="0">
       <onClick>
        <setValue group="${group}" value="0" />
       </onClick>
      </button>
      <button text="1">
       <onClick>
        <setValue group="${group}" value="1" />
       </onClick>
      </button>
      <button text="10">
       <onClick>
        <setValue group="${group}" value="10" />
       </onClick>
      </button>
      <button text="50">
       <onClick>
        <setValue group="${group}" value="50" />
       </onClick>
      </button>
      <button text="100">
       <onClick>
        <setValue group="${group}" value="100" />
       </onClick>
      </button>
      <button text="255">
       <onClick>
        <setValue group="${group}" value="255" />
       </onClick>
      </button>
     </horizontalLayout>
    </foreach>
    <label text="" />
    <telegramHistory />
   </verticalLayout>
  </panel>
  <panel id="roomPanel" title="${room.label}">
   <verticalLayout width="300">
    <foreach var="item" items="items">
     <itemController item="${item}" />
    </foreach>
   </verticalLayout>
  </panel>
  <panel id="categoryPanel" title="${category.label}">
   <verticalLayout width="400">
    <foreach var="item" items="items">
     <itemController item="${item}" label="${room.label} - ${item.label}" />
    </foreach>
   </verticalLayout>
  </panel>
 </panels>
</project>
