<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<project name="Example Project" startPanel="leftMainPanel">
 <categories>
  <category id="lighting" label="Beleuchtung" />
  <category id="heating" label="Heizung" />
 </categories>
 <groups>
  <group id="light.master" addr="1/0/99" dataType="bool" category="lighting" />
  <group id="light.1" addr="1/0/0" dataType="bool" category="lighting" />
  <group id="light.2" addr="1/0/1" dataType="unsigned byte" category="lighting" />
  <group id="light.3" addr="1/0/2" dataType="bool" category="lighting" />
  <group id="light.c1" dataType="bool" category="lighting" />
  <group id="light.11" addr="1/0/11" dataType="bool" category="lighting" />
 </groups>
 <programs>
  <program id="light-logic-1">
   <connectors>
    <input name="in1" group="light.1" />
    <input name="in2" group="light.2" />
    <output name="out" group="light.c1" />
   </connectors>
   <code>
    out = in1 | in2
   </code>
  </program>
 </programs>
 <rooms>
  <room id="living" label="Wohnzimmer">
   <item label="Raumlicht" group="light.1" />
   <item label="Hintergrund Beleuchtung" group="light.2" />
  </room>
  <room id="dining" label="Esszimmer">
   <item label="Raumlicht" group="light.1" />
  </room>
  <room id="entrance" label="Eingang">
   <item label="Raumlicht" group="light.3" />
  </room>
  <room id="garage" label="Garage">
   <item label="Raumlicht" group="light.11" />
  </room>
 </rooms>
 <panels>
  <panel id="leftMainPanel" title="Ãœbersicht">
   <verticalLayout width="300">
    <label text="RÃ¤ume" />
    <foreach var="room" items="rooms">
     <button text="${room.label}" width="300">
      <onClick>
       <showPanel panel="roomPanel" />
      </onClick>
     </button>
    </foreach>
    <label text="" />
    <label text="Kategorien" />
    <foreach var="category" items="categories">
     <button text="${category.label}" width="300">
      <onClick>
       <showPanel panel="categoryPanel" />
      </onClick>
     </button>
    </foreach>
   </verticalLayout>
  </panel>
  <panel id="rightMainPanel" title="Test Konsole">
   <verticalLayout>
    <foreach var="group" items="groups">
     <horizontalLayout>
      <label text="Sende Telegramm an ${group.id}" width="200" />
      <button text="0">
       <onClick>
        <sendTelegram group="${group}" value="0" />
       </onClick>
      </button>
      <button text="1">
       <onClick>
        <sendTelegram group="${group}" value="1" />
       </onClick>
      </button>
      <button text="10">
       <onClick>
        <sendTelegram group="${group}" value="10" />
       </onClick>
      </button>
      <button text="50">
       <onClick>
        <sendTelegram group="${group}" value="50" />
       </onClick>
      </button>
      <button text="100">
       <onClick>
        <sendTelegram group="${group}" value="100" />
       </onClick>
      </button>
      <button text="255">
       <onClick>
        <sendTelegram group="${group}" value="255" />
       </onClick>
      </button>
     </horizontalLayout>
    </foreach>
    <label text="" />
    <telegramHistory />
   </verticalLayout>
  </panel>
  <panel id="roomPanel" title="${room.label}">
   <verticalLayout width="300">
    <foreach var="item" items="items">
     <itemController item="${item}" />
    </foreach>
   </verticalLayout>
  </panel>
  <panel id="categoryPanel" title="${category.label}">
   <verticalLayout width="400">
    <foreach var="item" items="items">
     <itemController item="${item}" label="${room.label} - ${item.label}" />
    </foreach>
   </verticalLayout>
  </panel>
 </panels>
</project>
